{
  "icons": {
    "16": "./gen-assets/icon16.plasmo.png",
    "32": "./gen-assets/icon32.plasmo.png",
    "48": "./gen-assets/icon48.plasmo.png",
    "64": "./gen-assets/icon64.plasmo.png",
    "128": "./gen-assets/icon128.plasmo.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "./gen-assets/icon16.plasmo.png",
      "32": "./gen-assets/icon32.plasmo.png",
      "48": "./gen-assets/icon48.plasmo.png",
      "64": "./gen-assets/icon64.plasmo.png",
      "128": "./gen-assets/icon128.plasmo.png"
    },
    "default_popup": "./popup.html"
  },
  "version": "1.0.0",
  "author": "PromptPrune Team",
  "name": "PromptPrune",
  "description": "Optimize AI prompts to reduce token usage and costs using local processing",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://gemini.google.com/app/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://poe.com/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://twitter.com/*",
        "https://copilot.microsoft.com/*",
        "https://manus.im/*",
        "https://www.deepseek.com/*",
        "https://deepseek.com/*",
        "https://www.midjourney.com/*",
        "https://midjourney.com/*"
      ],
      "js": [
        "../src/content.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ]
}
